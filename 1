rationForm").addEventListener("submit", function (e) { e.preventDefault(); // Evita o recarregamento da página // Obtendo os valores do formulário const nome = document.getElementById("nome").value; const contato = document.getElementById("contato").value; // Armazenando os dados no localStorage (para simulação) let convidados = JSON.parse(localStorage.getItem("convidados")) || []; convidados.push({ nome, contato }); // Salvando novamente no localStorage localStorage.setItem("convidados", JSON.stringify(convidados)); // Limpando os campos do formulário document.getElementById("registrationForm").reset(); alert("Você foi adicionado à lista de convidados!"); }); </script> </body> </html>
